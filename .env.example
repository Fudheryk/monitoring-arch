# .env.example
# Environment variables for the monitoring application

DEV_API_KEY=dev-apikey-123
API_KEY=prod-apikey-xxxxxxxxxx

DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/monitoring
REDIS_URL=redis://redis:6379/0
JWT_SECRET=dev-jwt-secret-32-chars-minimum-length-required-here
NO_DATA_MINUTES=5
SMTP_DSN=

# Notifications
SLACK_WEBHOOK=http://httpbin:80/status/204
# SLACK_DEFAULT_CHANNEL="#canal"

# Rappels d’alerte (minutes)
ALERT_REMINDER_MINUTES=30

# Dev/CI : n’émet pas réellement vers Slack
STUB_SLACK=1

# CORS_ALLOW_ORIGINS=http://localhost:3000
# Pour exécution *depuis l’hôte* (tests d’intégration) :
# DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/monitoring

INGEST_FUTURE_MAX_SECONDS=120
INGEST_LATE_MAX_SECONDS=300  # 5 minutes de tolérance
DEFAULT_PERCENT_THRESHOLD=90.0

OUTBOX_BACKOFFS=[10,10,10]

JWT_SECRET=change-me
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=7
COOKIE_DOMAIN=
COOKIE_SECURE=false

# Notifications e-mail
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=monitoring@example.com
SMTP_PASSWORD=changeme
SMTP_USE_TLS=true
SMTP_FROM="Monitoring System <monitoring@example.com>"
