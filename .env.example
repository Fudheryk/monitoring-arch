# .env.example
# Environment variables for the monitoring application

DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/monitoring
REDIS_URL=redis://redis:6379/0
JWT_SECRET=dev-jwt-secret-32-chars-minimum-length-required-here
NO_DATA_MINUTES=5
KO_CONSECUTIVE_DEFAULT=2
SMTP_DSN=

# Notifications
SLACK_WEBHOOK=http://httpbin:80/status/204
# SLACK_DEFAULT_CHANNEL="#alerts"

# Rappels d’alerte (minutes)
ALERT_REMINDER_MINUTES=1

# Dev/CI : n’émet pas réellement vers Slack
STUB_SLACK=1

